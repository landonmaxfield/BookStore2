@page "/admin/books/details/{id:long}"

<h3 class="bg-info text-white text-cener p-1">Details</h3>

<table>

    <tbody>
        <tr><th>Book ID:</th><td>@book.BookId</td></tr>
        <tr><th>Book Title:</th><td>@book.Title</td></tr>
        <tr><th>Book Author:</th><td>@book.Author</td></tr>
        <tr><th>Book Publisher:</th><td>@book.Publisher</td></tr>
        <tr><th>Book Isbn:</th><td>@book.Isbn</td></tr>
        <tr><th>Book Classification:</th><td>@book.Classification</td></tr>
        <tr><th>Book Category:</th><td>@book.Category</td></tr>
        <tr><th>Book Page Count:</th><td>@book.PageCount</td></tr>
        <tr><th>Book Price:</th><td>@book.Price</td></tr>
    </tbody>

</table>

<NavLink class="btn btn-warning" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/books">Back</NavLink>

@code {

    [Inject]
    public IBookstoreRepository repo { get; set; }

    [Parameter]
    public long Id { get; set; }

    public Book book { get; set; }

    protected override void OnParametersSet()
    {
        book = repo.Books.FirstOrDefault(x => x.BookId == Id);
    }

    public string EditUrl => $"/admin/books/edit/{b.BookId}";
}
