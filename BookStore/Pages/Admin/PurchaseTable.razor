<h3>PurchaseTable</h3>

<table class="table table-sm table-striped table-bordered">

    <thead>
        <tr>
            <th colspan="5" class="text-center">@TableTitle</th>
        </tr>
    </thead>

    <tbody>
        @if (Purchase?.Count()> 0)
            {
                @foreach (Purchase p in Purchase)
                {
                    <tr>
                        <td>@p.Name</td>
                        <td>@p.Zip</td>
                        <th>Book</th>
                        <th>Quantity</th>

                        <td>
                            <button class="btn btn-sm btn-danger" @onclick="@(x => PurchaseSelected.InvokeAsync(p.PuchaseID))"
                                    @ButtonLabel
                                    </button>
                        </td>
                    </tr>

                    @foreach (BasketLineItem bli in p.Item)
                    {
                        <tr>
                            <td colspan="2"></td>
                            <td>@bli.Book.Title</td>
                            <td>@bli.Quantity</td>
                        </tr>
                    }
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No Orders</td>
                </tr>
            }
    </tbody>

</table>

@code {

    [Parameter]
    public string TableTitle { get; set; } = "Purchase";

    [Parameter]
    public IEnumerable<Purchase>Purchase { get; set; }

    [Parameter]
    public string ButtonLabel { get; set; } = "Purchased";

    [Parameter]
    public EventCallback<int> PurchaseSelected { get; set; }

}
